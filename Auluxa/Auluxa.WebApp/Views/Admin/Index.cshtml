<div class="wrapper">
    <!--the left sidebar with the navigation-->
    <navigation></navigation>

    <section class="content">
        <!--the content comming from the angular router-->
        <router-outlet></router-outlet>

        <!--the footer-->
        <footer></footer>
    </section>
</div>