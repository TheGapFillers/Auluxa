@using Auluxa.WebApp.Controllers
@model  ResetPasswordViewModel

<div class="wrapper login-page">

    <div class="row mtop-100">
        <div class="col-md-6 col-md-offset-3 clearfix bg--dark">

            <div class="main-logo">
                Auluxa <span>Reset Password</span>
                <p>Reset the password for the user: @ViewBag.email</p>
            </div>

            @using (Html.BeginForm("ResetPassword", "Home", new { ReturnUrl = ViewBag.ReturnUrl }, FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
            {
                @Html.AntiForgeryToken()
                @Html.HiddenFor(model => model.Code)
                @Html.HiddenFor(model => model.Email)

                <div class="input-group">
                    <span class="input-group-addon"><i class="pe-7f-lock pe-fw"></i></span>
                    @Html.PasswordFor(m => m.Password, new { @class = "form-control form-control-input", placeholder = "Password" })
                </div>
                <div class="input-group mtop-25">
                    <span class="input-group-addon"><i class="pe-7f-lock pe-fw"></i></span>
                    @Html.PasswordFor(m => m.ConfirmPassword, new { @class = "form-control form-control-input", placeholder = "Confirm Password" })
                </div>

                <div class="clearfix"></div>
                <input type="submit" value="Reset password" class="btn btn-skyblue pull-right" style="width: 100%;" />
            }
        </div>
    </div>
</div>
